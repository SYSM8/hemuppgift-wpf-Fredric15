<Window x:Class="Hemuppgift_WPFtemplate.DockPanel"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Hemuppgift_WPFtemplate"
        mc:Ignorable="d"
        Title="DockPanel" Height="450" Width="800">
    <Grid x:Name="MainGrid">    
        <DockPanel LastChildFill="False">
            <Button DockPanel.Dock="Top" Content="Top" Height="30" Width="80" Margin="5,5,5,5" />
            <Button DockPanel.Dock="Bottom" Content="Bottom" Height="30" Width="80" Margin="5,5,5,5"/>
        </DockPanel>
        <DockPanel LastChildFill="False">
            <Button DockPanel.Dock="Left" Content="Left"  Height="30" Width="80" Margin="5,5,5,5"/>
            <Button DockPanel.Dock="Right" Content="Right" Height="30" Width="80" Margin="5,5,5,5"/>
        </DockPanel>
        <Button x:Name="btnCenter" Content="Center" HorizontalAlignment="Center" VerticalAlignment="Center" Height="30" Width="80" Margin="5,5,5,5" Click="Button_Click"/>
        
    </Grid>
</Window>
